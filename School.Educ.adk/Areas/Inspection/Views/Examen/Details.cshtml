@model School.Educ.adk.Areas.Inspection.Models.Examen

@{
    ViewData["Title"] = "Info";
}

<h1>Informations sur le directeur</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-xs"><i class="fa fa-reply"></i> retour</a>
                        </li>
                        <li>
                            <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@Model.ID">Modifier</a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <dl class="row">
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.Periode)
                        </dt>
                        <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.Periode)
                        </dd>
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.Serie)
                        </dt>
                        <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.Serie)
                        </dd>
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.CodeAcces)
                        </dt>
                        <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.CodeAcces)
                        </dd>
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.DateExamen)
                        </dt>
                        <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.DateExamen)
                        </dd>
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.Duree)
                        </dt>
                        <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.Duree)
                        </dd>
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.IdInspecteur)
                        </dt>
                        <dd class="col-form-label col-md-6 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.IdInspecteur)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Datatables -->

<link href="~/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="~/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
<link href="~/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
<link href="~/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
<link href="~/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a asp-area="Inspection" asp-controller="Questions" asp-route-id="@Model.ID" asp-action="Create" class="btn btn-outline-success btn-xs"><i class="fa fa-plus"></i>  nouveau</a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <p class="text-muted font-13 m-b-30">

                            </p>
                            <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Enoncer</th>
                                        <th>Bonne réponse</th>
                                        <th>Cote</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>


                                <tbody>
                                    @if (Model.Questions.Count() == 0)
                                    {
                                        <tr>
                                            <td colspan="4">Aucune question existe!</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var item in Model.Questions)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Enoncer)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.BonneReponse)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Cote)
                                                </td>
                                                <td style="text-align:center">
                                                    <a asp-area="Inspection" asp-controller="Questions" asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> </a>
                                                    <a asp-area="Inspection" asp-controller="Questions" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> </a>
                                                    <a asp-area="Inspection" asp-controller="Questions" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
