@model School.Educ.adk.Areas.Ecole.Models.Section

@{
    ViewData["Title"] = "Details";
}

<!-- Datatables -->

<link href="~/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="~/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
<link href="~/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
<link href="~/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
<link href="~/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">

<h1>La section</h1>
<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-xs"><i class="fa fa-reply"></i> retour</a>
                    </li>
                    <li>
                        <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-outline-danger btn-xs"><i class="fa fa-trash-o"></i>  Supprimer</a>
                    </li>
                    <li>
                        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-outline-info btn-xs"><i class="fa fa-pencil"></i>  Modifier</a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>

            <div class="x_content">
                <dl class="row">
                    <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                        @Html.DisplayNameFor(model => model.Nom)
                    </dt>
                    <dd class="col-form-label col-md-6 col-sm-6 text-left label-align">
                        @Html.DisplayFor(model => model.Nom)
                    </dd>
                </dl>
            </div>

            <div class="x_content">
                <form class="" asp-action="Details" method="get" novalidate>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <span class="section">Nouvelle option</span>

                    <input name="id" type="hidden" value="@Model.ID" />
                    
                    <div class="field item form-group">
                        <label class="col-form-label col-md-3 col-sm-3  label-align">Nom de l'option</label>
                        <div class="col-md-6 col-sm-6">
                            <input class="form-control has-feedback-left" name="Nom" type="text" />
                            <span class="fa fa-pencil form-control-feedback left" aria-hidden="true"></span>
                        </div>
                    </div>
                    <div class="ln_solid">
                        <div class="form-group">
                            <br /><br />
                            <div class="col-md-6 offset-md-3 text-center">
                                <button type='submit' class="btn btn-primary">Enregistrer</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="clearfix"></div>

            <div class="x_content">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="card-box table-responsive">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <p class="text-muted font-13 m-b-30">

                            </p>
                            <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th colspan="6">@Html.DisplayNameFor(model => model.Nom)</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>


                                <tbody>
                                    @if (Model.Options.Count() == 0)
                                    {
                                        <tr>
                                            <td colspan="7">Aucune option existe!</td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var item in Model.Options)
                                        {
                                            <tr>
                                                <td colspan="6">
                                                    @Html.DisplayFor(modelItem => item.Nom)
                                                </td>
                                                <td style="text-align:center">
                                                    <a asp-area="Ecole" asp-controller="Sections" asp-action="DeleteOption" asp-route-id="@item.ID" asp-route-idSec="@Model.ID" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
