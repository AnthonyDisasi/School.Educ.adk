@model RoleEditModel

<h1>Affectation</h1>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="x_panel">
            <div class="x_title">
                <h4>Rôle</h4>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-xs"><i class="fa fa-reply"></i> retour</a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>

            <div class="x_content">

                <form class="" asp-action="Edit" method="post" novalidate>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="field item form-group">
                        <div class="col-md-6 col-sm-6">
                            <input type="hidden" name="roleName" value="@Model.Role.Name" />
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <input type="hidden" name="roleId" value="@Model.Role.Id" />
                        </div>
                    </div>
                    <span class="section">Ajouter à @Model.Role.Name</span>

                    <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">

                        <tbody>
                            @if (Model.NonMembers.Count() == 0)
                            {
                                <tr><td colspan="2">Tous les utilisateurs sont membres</td></tr>
                            }
                            else
                            {
                                @foreach (ApplicationUser user in Model.NonMembers)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>
                                            <input type="checkbox" name="IdsToAdd" value="@user.Id">
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <hr />
                    <span class="section">Retirer l'utilisateur de @Model.Role.Name</span>

                    <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                        <tbody>
                            @if (Model.Members.Count() == 0)
                            {
                                <tr><td colspan="2">Aucun utilisateur n'est membre</td></tr>
                            }
                            else
                            {
                                @foreach (ApplicationUser user in Model.Members)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>
                                            <input type="checkbox" name="IdsToDelete" value="@user.Id">
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <div class="ln_solid">
                        <br />
                        <div class="form-group text-center">
                            <div class="col-md-6 offset-md-3">
                                <button type='submit' class="btn btn-primary">Enregistrer</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>