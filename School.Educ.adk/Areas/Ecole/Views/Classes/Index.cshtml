@model IEnumerable<School.Educ.adk.Areas.Ecole.Models.Classe>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-area="Ecole" asp-controller="Classes" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Niveau)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Option)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ecole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Niveau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Option)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ecole.ID)
            </td>
            <td>
                <a asp-area="Ecole" asp-controller="Classes" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-area="Ecole" asp-controller="Classes" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-area="Ecole" asp-controller="Classes" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
