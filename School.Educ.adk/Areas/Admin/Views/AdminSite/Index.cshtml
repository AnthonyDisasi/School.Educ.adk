@model IEnumerable<ApplicationUser>

<div class="bg-primary panel-body"><h4>Compte d'utilisateur</h4></div>

<div class="text-danger" asp-validation-summary="ModelOnly"></div>

<table class="table table-condensed table-bordered">
    <tr><th>ID</th><th>Nom</th><th>E-mail</th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">Aucun compte d'utilisateur</td></tr>
    }
    else
    {
        foreach (ApplicationUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>

                <td>
                    <a asp-area="Admin" asp-action="Delete" asp-route-id="@user.Id">Retirer</a>
                    <a asp-area="Admin" asp-action="Edit" asp-route-id="@user.Id">Modifier</a>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-action="Create">Ajouter un utilisateur</a> 