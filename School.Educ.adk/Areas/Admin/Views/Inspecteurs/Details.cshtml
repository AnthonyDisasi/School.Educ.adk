@model School.Educ.adk.Areas.Admin.Models.Inspecteur

@{
    ViewData["Title"] = "Info";
}

<h1>Informations sur l'inspecteur</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-xs"><i class="fa fa-reply"></i> retour</a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <dl class="row">
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.ID)
                        </dt>
                        <dd class="col-form-label col-md-6 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.ID)
                        </dd>
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.Nom)
                        </dt>
                        <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.Nom)
                        </dd>
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.Postnom)
                        </dt>
                        <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.Postnom)
                        </dd>
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.Prenom)
                        </dt>
                        <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.Prenom)
                        </dd>
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.Genre)
                        </dt>
                        <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.Genre)
                        </dd>
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.Matricule)
                        </dt>
                        <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.Matricule)
                        </dd>
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                            @Html.DisplayNameFor(model => model.Password)
                        </dt>
                        <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.Password)
                        </dd>
                        <dt class="col-form-label col-md-6 col-sm-6  label-align">
                            @Html.DisplayNameFor(model => model.DateNaissance)
                        </dt>
                        <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                            @Html.DisplayFor(model => model.DateNaissance)
                        </dd>
                    </dl>

                    <div class="text-center">
                        <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@Model.ID">Modification</a>
                    </div>
                    <br />

                    @if (ViewBag.ecole != null)
                    {
                        <dl class="row">
                            <span class="section">Info sur l'affectation</span>

                            <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                                Nom de l'ecole affectée
                            </dt>
                            <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                                @ViewBag.ecole
                            </dd>

                        </dl>
                        if (ViewBag.ecole != "L'école à laquelle vous a été affectée, a été retirée; votre affectation est supprimée")
                        {
                            <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                                @Html.DisplayNameFor(model => model.Affectation.Description)
                            </dt>
                            <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                                @Html.DisplayFor(model => model.Affectation.Description)
                            </dd>

                            <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                                @Html.DisplayNameFor(model => model.Affectation.PeriodeAffectectation)
                            </dt>
                            <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                                @Html.DisplayFor(model => model.Affectation.PeriodeAffectectation)
                            </dd>

                            <dt class="col-form-label col-md-6 col-sm-6 text-right label-align">
                                @Html.DisplayNameFor(model => model.Affectation.DateAffectation)
                            </dt>
                            <dd class="col-form-label col-md-1 col-sm-6 text-left label-align">
                                @Html.DisplayFor(model => model.Affectation.DateAffectation)
                            </dd>

                            <div class="text-center">
                                <a class="btn btn-outline-info" asp-area="Admin" asp-controller="Affectations" asp-action="Edit" asp-route-id="@Model.Affectation.ID">Modification</a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center">
                            <span class="section">Aucune affectation vous concernant</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>