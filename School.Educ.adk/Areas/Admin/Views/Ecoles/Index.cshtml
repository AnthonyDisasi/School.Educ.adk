@model IEnumerable<School.Educ.adk.Areas.Ecole.Models.Ecole>

@{
    ViewData["Title"] = "Index";
}

<h1>Les écoles</h1>

<!-- Datatables -->

<link href="~/vendors/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="~/vendors/datatables.net-buttons-bs/css/buttons.bootstrap.min.css" rel="stylesheet">
<link href="~/vendors/datatables.net-fixedheader-bs/css/fixedHeader.bootstrap.min.css" rel="stylesheet">
<link href="~/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet">
<link href="~/vendors/datatables.net-scroller-bs/css/scroller.bootstrap.min.css" rel="stylesheet">

<div class="row">
    <div class="col-md-12 col-sm-12 ">
        <div class="x_panel">
            <div class="x_title">
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a asp-action="Create" class="btn btn-outline-success btn-xs"><i class="fa fa-plus"></i>  nouveau</a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="row">
                <div class="x_panel">
                    <div class="x_content">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-4 col-sm-4  profile_details">
                                <div class="well profile_view">
                                    <div class="col-sm-12">
                                        <h4 class="brief text-center"><i>@item.Nom</i></h4>
                                        <div class="left">
                                            @if(item.Directeur == null)
                                            {
                                                <h2>Directeur : <strong><i class="fa fa-user"></i></strong></h2>
                                            }
                                            else 
                                            {
                                                <h2>Directeur : <strong>@item.Directeur.NomComplet</strong></h2>
                                            }
                                            <p>Sous-division : <strong>@item.SousDivision </strong></p>
                                            <ul class="list-unstyled">
                                                <li><i class="fa fa-users"></i>  Professeurs : @item.Professeurs.Count</li>
                                                <li><i class="fa fa-institution"></i>  Classes : @item.Classes.Count</li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="profile-bottom text-center">
                                        <div class="text-center col-sm-5 emphasis">

                                            <p class="ratings text-center">
                                                @if (item.Niveau == 0)
                                                {
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                }
                                                else if (item.Niveau == 10)
                                                {
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                }
                                                else if (item.Niveau == 1)
                                                {
                                                    <i class="fa fa-star-half-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                }
                                                else if (item.Niveau == 2)
                                                {
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                }
                                                else if (item.Niveau == 3)
                                                {
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-half-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                }
                                                else if (item.Niveau == 4)
                                                {
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                }
                                                else if (item.Niveau == 5)
                                                {
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-half-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                }
                                                else if (item.Niveau == 6)
                                                {
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                }
                                                else if (item.Niveau == 7)
                                                {
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-half-o"></i>
                                                    <i class="fa fa-star-o"></i>
                                                }
                                                else if (item.Niveau == 8)
                                                {
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-o"></i>
                                                }
                                                else if (item.Niveau == 9)
                                                {
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star-half-o"></i>
                                                }
                                            </p>
                                        </div>
                                        <div class="btn-group center-margin btn-group-sm col-sm-7 emphasis">
                                            <a asp-area="Admin" asp-controller="Ecoles" asp-action="Details" asp-route-id="@item.ID" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> </a>
                                            <a asp-area="Admin" asp-controller="Ecoles" asp-action="Edit" asp-route-id="@item.ID" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> </a>
                                            <a asp-area="Admin" asp-controller="Ecoles" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> </a>
                                        </div>
                                    </div>
                                    <div><br/></div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
